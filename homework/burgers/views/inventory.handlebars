<h1><a href="/">Jessica's Burgers</h1></a>
<form class="form-horizontal" id = 'inventory'>
  <fieldset>

    <!-- Form Name -->
    <legend>Inventory <span class="badge">{{ingredient.length}}</span></legend>

    <div class="sectionwrapper">
      <!-- Appended Input-->
      {{#each ingredient}}
      <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="input-group">
            <input id="{{this._id}}" class="form-control name" placeholder="{{this.name}}" type="text">
            <span class="input-group-btn"><button class="btn btn-default name" id="{{this._id}}" type="button">Update Name</button></span>
            <input id="{{this._id}}" class="form-control price" placeholder="${{this.price}}" type="text">
            <span class="input-group-btn"><button class="btn btn-default price" id="{{this._id}}" type="button">Update Price</button></span>
            <input id="{{this._id}}" class="form-control quantity" placeholder="{{this.quantity}}" type="text">
            <span class="input-group-btn"><button class="btn btn-default quantity" id="{{this._id}}" type="button">Update Quantity</button></span>
          </div>
          <p class="help-block"><button id="{{this._id}}" class="textbutton">Out of Stock?</button></p>
        </div>
      </div>
      {{/each}}
    </div>
  </fieldset>
</form>
<form class="form-horizontal" id="addnewitemform">
  <fieldset>
    <div class="form-group">
      <label class="col-md-3 control-label" for="appendedtext"><h4>Add New Ingredient</h4></label>
      <div class="col-md-6">
        <div class="input-group">
          <input id="nnamein" class="form-control" placeholder='Name' type="text">
          <span class="input-group-addon">Enter new item's name</span>
          <input id="npricein" class="form-control" placeholder="Price" type="text">
          <span class="input-group-addon">Enter new item price</span>
          <input id="nquanin" class="form-control" placeholder='Quantity' type="text">
          <span class="input-group-addon">Enter new item quantity</span>
        </div>
        <button class="btn btn-success btn-small" id="addnewbtn" type="submit">Add new ingredient</button>
      </div>
    </div>
  </fieldset>
</form>

