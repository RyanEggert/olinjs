<h1><a href="/">Jessica's Burgers</h1></a>
<form class="form-horizontal">
  <fieldset>

    <!-- Form Name -->
    <legend>Build your burger!</legend>
    <legend>Order total: $<span class='orderprice'>0.00</span></legend>

    <!-- Multiple Checkboxes -->
    <div class="ordermain">
    <div class="form-group">
      <label class="col-md-4 control-label" for="toppings">Choose toppings</label>
      <div class="col-md-4">
        {{#each ingredient}}
        <div class="checkbox">
        <label for={{this.name}}>
        <input name={{this.name}} class=quant{{this.quantity}} value={{this.price}} type="checkbox">
            {{this.name}}, ${{this.price}}
          </label>
        </div>
        {{/each}}
      </div>
    </div>

    <!-- Button -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="orderbutton"></label>
      <div class="col-md-4">
        <button id="orderbutton" name="orderbutton" class="btn btn-primary">Place Order!</button>
      </div>
    </div>
    </div>

  </fieldset>
</form>

